#!/usr/bin/zsh

defaultysc="Yascfile"
yscdir="$PWD"
ysc="$PWD/$defaultysc"

if [[ ! -f "${ysc}" ]]; then
	echo "fatal: Yascfile couldn't be found in the current area."
	exit 1
elif [[ -d "${ysc}" ]]; then
	echo "fatal: Yascfile is a directory, cannot proceed"
	exit 1
fi

source ${ysc}
echo "Name: $name"
echo "Description:"
echo "$desc"
echo ""
echo ""
